<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RecetteApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_food_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_food_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecetteCuisine"
        tools:targetApi="31">
        <activity
            android:name=".AffichageRecetteActivity"
            android:exported="false" />
        <activity
            android:name=".FavorisActivity"
            android:exported="false" />
        <activity
            android:name=".AjouterRecetteActivity"
            android:exported="false" />
        <activity
            android:name=".InscriptionActivity"
            android:exported="false" />
        <activity
            android:name=".RechercheRecetteActivity"
            android:exported="false" />
        <activity
            android:name=".ConnexionActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>